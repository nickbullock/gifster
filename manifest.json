{
  "manifest_version": 2,
  "name": "gifster",
  "version": "1.0",
  "description": "extension to make .gif animations",
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "gifster",
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "webcam": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "record gif from webcam stream"
    },
    "screen": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "record gif from screen stream"
    }
  },
  "permissions": [
    "*://*/*",
    "activeTab",
    "tabCapture",
    "tabs",
    "storage",
    "background",
    "notifications"
  ]
}