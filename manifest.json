{
  "manifest_version": 2,
  "name": "gifster",
  "version": "0.1",
  "description": "extension to make .gif animations",
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["gif.worker.js","content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "gifster",
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "webcam": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "MacCtrl+Shift+1"
      },
      "description": "record gif from webcam stream"
    },
    "screen": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "MacCtrl+Shift+2"
      },
      "description": "record gif from screen stream"
    },
    "area": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "MacCtrl+Shift+3"
      },
      "description": "record gif from area stream"
    }
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabCapture",
    "tabs",
    "storage",
    "notifications"
  ],
  "web_accessible_resources": [
    "gif.worker.js"
  ]
}